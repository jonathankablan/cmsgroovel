{
	"name": "groovel/cmsgroovel",
    "description": "Platform PHP for web artisans",
    "keywords": ["php","framework"],
    "license": "GPLv2",
    "homepage": "http://www.groovelcms.com",
    "authors": [
        {
            "name": "francois varnier",
            "email": "groovelcms@gmail.com"
        }
    ],
	"require": {
	    "laravel/framework":"5.2.31",
		"elasticsearch/elasticsearch":"~2.0",
        "pda/pheanstalk": "2.0.*",
		"composer/composer": "1.0.*@dev",
		"dingo/api":"1.0.x@dev",
		"tymon/jwt-auth":"0.5.*",
		"groovel/api":"dev-master"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"psr-4": {
			"Groovel\\Cmsgroovel\\": "src/"
		}
	},
	 "scripts": {
	 	"post-package-install": [
            "Groovel\Cmsgroovel\config\install\groovel\composer\InstallGroovel::postPackageInstall"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan jwt:generate"
        ],
     },
	
	 "minimum-stability": "dev"
}
